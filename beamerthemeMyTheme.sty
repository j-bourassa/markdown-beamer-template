\usepackage{booktabs,latexsym,amssymb,wasysym,fvextra}
\usefonttheme{professionalfonts}
\hypersetup{colorlinks,linkcolor=,urlcolor=hlColor1}

\useoutertheme[subsection=false]{smoothbars}
\usecolortheme{whale}
\usecolortheme{orchid}
\useinnertheme[shadow]{rounded}
\useinnertheme{rectangles}


% Colors
\definecolor{textColor}{HTML}{323232}
\definecolor{hlColor1}{HTML}{003b6f}
\definecolor{hlColor2}{HTML}{00203c}
\definecolor{bgColor}{HTML}{faf0e6}
\definecolor{green}{HTML}{29aa29}
\titlegraphic{\includegraphics[height=0.8cm]{assets/note.png}}

\setbeamercolor{palette primary}{bg=hlColor1,fg=white}
\setbeamercolor{palette secondary}{bg=hlColor1}
\setbeamercolor{palette tertiary}{bg=hlColor2}
\setbeamercolor{palette quaternary}{bg=textColor}
\setbeamercolor{frametitle}{bg=white,fg=hlColor2}
\setbeamercolor{block title}{bg=hlColor2}
\setbeamercolor{normal text}{bg=bgColor,fg=textColor}
\setbeamercolor{item}{parent=normal text}


% Footer
\setbeamertemplate{footline}{
  \leavevmode
  \hbox{\begin{beamercolorbox}[wd=.5\paperwidth,ht=2.5ex,dp=1.125ex,leftskip=.3cm plus1fill,rightskip=.3cm]{author in head/foot}
    \usebeamerfont{author in head/foot}\insertshortauthor
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.5ex,dp=1.125ex,leftskip=.3cm,rightskip=.3cm plus1fil]{title in head/foot}%
    \usebeamerfont{title in head/foot}\insertshorttitle
    \hfill\insertframenumber{} / \inserttotalframenumber\hspace*{2ex}
  \end{beamercolorbox}}
}


% https://tex.stackexchange.com/questions/263706/latex-adding-cell-padding-to-a-text-frame
\usepackage[most]{tcolorbox}
\newtcolorbox{myframe}[1][]{
  enhanced,
  arc=10pt,
  auto outer arc,
  colback=white,
  boxrule=0.8pt,
  left=15pt,
  right=15pt
}

\newcommand{\framebegin}{\begin{myframe}}
\newcommand{\frameend}{\end{myframe}}


% Columns (https://stackoverflow.com/questions/15142134/slides-with-columns-in-pandoc/26069751#26069751)
\newcommand{\columnsbegin}{\begin{columns}}
\newcommand{\columnsend}{\end{columns}}


% Remove section number (https://tex.stackexchange.com/questions/468126/suppress-section-name-and-numbers-on-section-pages-of-the-madrid-theme)
\setbeamertemplate{section page}
{
  \begingroup
    \centering
    \vskip1em\par
    \begin{beamercolorbox}[sep=12pt,center,colsep=-4bp,rounded=true,shadow=\beamer@themerounded@shadow]{section title}
      \usebeamerfont{section title}\insertsection\par
    \end{beamercolorbox}
  \endgroup
}
